             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdleClicker"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="30" Width="50" Margin="0,0,5,0">
    <Grid Margin="0">
        <MediaElement x:Name="ResourceIconME" Margin="0,5" Height="20" Width="20" HorizontalAlignment="Left"/>
        <TextBlock x:Name="ResourceCountTB" HorizontalAlignment="Left" Margin="25,0,-16.424,0" TextWrapping="Wrap" Text="20" FontSize="10" Foreground="#FFE4B57B" Height="15"/>
