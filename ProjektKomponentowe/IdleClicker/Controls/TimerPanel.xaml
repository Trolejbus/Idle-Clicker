<UserControl x:Class="IdleClicker.TimerPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdleClicker"
             mc:Ignorable="d" 
             d:DesignHeight="30" Width="120">
    <Grid Height="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="34*"/>
            <ColumnDefinition Width="66*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="textBlock" TextWrapping="Wrap" Text="Dzień:" Foreground="#FFE4B57B" Height="15" FontSize="10" HorizontalAlignment="Right" Width="Auto" VerticalAlignment="Top"/>
        <TextBlock x:Name="textBlock_Copy" TextWrapping="Wrap" Text="Godzina:" Foreground="#FFE4B57B" Height="15" FontSize="10" VerticalAlignment="Top" Grid.Column="1" HorizontalAlignment="Right" Width="Auto"/>
        <TextBlock x:Name="DayTB" HorizontalAlignment="Right" TextWrapping="Wrap" Text="1" Foreground="#FFE4B57B" Height="15" FontSize="10" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="HourTB" HorizontalAlignment="Right" TextWrapping="Wrap" Text="00:00" Foreground="#FFE4B57B" Height="15" FontSize="10" Grid.Column="1" VerticalAlignment="Bottom"/>

    </Grid>
</UserControl>