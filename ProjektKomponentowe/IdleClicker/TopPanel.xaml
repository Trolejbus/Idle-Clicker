<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdleClicker"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" x:Class="IdleClicker.TopPanel"
             mc:Ignorable="d" 
             d:DesignHeight="20" Width="305.533">
    <Grid Background="#6E2617">
        <i:Interaction.Behaviors>
            <local:DragBehaviour/>
        </i:Interaction.Behaviors>
        <local:mainButton x:Name="mainButton" Content="X" Margin="0,2,2,2" HorizontalAlignment="Right" Width="16" Height="16" FontSize="8" Click="mainButton_Click">
            <i:Interaction.Behaviors>
                <local:HiderBehaviour/>
            </i:Interaction.Behaviors>
        </local:mainButton>
    </Grid>
</UserControl>
