<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdleClicker"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" x:Class="IdleClicker.TopPanel"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBF6913" Offset="1"/>
                <GradientStop Color="Black" Offset="0.02"/>
            </LinearGradientBrush>
        </Grid.Background>
        <i:Interaction.Behaviors>
            <local:DragBehaviour/>
        </i:Interaction.Behaviors>
    </Grid>
</UserControl>
