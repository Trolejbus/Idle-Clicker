<local:Scene x:Class="IdleClicker.GameScene"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdleClicker"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="480">

    <Grid x:Name="grid" Background="Blue">
        <local:MainPanel x:Name="MainPanel" Margin="0" VerticalAlignment="Top"/>
        <Canvas x:Name="canvas" HorizontalAlignment="Stretch" Margin="0,50,0,0">
            <local:SimpleMoveableControl HorizontalAlignment="Left" Height="143" Margin="0,0,0,0" VerticalAlignment="Top" Width="143"/>
        </Canvas>
    </Grid>
</local:Scene>
